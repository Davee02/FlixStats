@model NetflixStatizier.Models.InputModels.NetflixAccountInputModel

@{
    ViewData["Title"] = "Home";
}

<form asp-controller="Stats" asp-action="Overview">
    <div id="form-horizontal">
        <h2>Your Netflix account-date</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="NetflixEmail"></label>
            <input asp-for="NetflixEmail" class="form-control" />
            <span asp-validation-for="NetflixEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NetflixPassword"></label>
            <input asp-for="NetflixPassword" class="form-control" />
            <span asp-validation-for="NetflixPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NetflixProfileName"></label>
            <input asp-for="NetflixProfileName" class="form-control" />
            <span asp-validation-for="NetflixProfileName" class="text-danger"></span>
        </div>

        <input type="submit" value="Calculate Stats" class="btn btn-primary" />
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}