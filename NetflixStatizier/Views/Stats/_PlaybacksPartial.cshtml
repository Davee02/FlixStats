@model NetflixStatizier.Models.ViewModels.NetflixPlaybacksViewModel

<h4>@Model.PlaybackDate.ToLongDateString()</h4>

<p><span class="font-weight-bold">Total time:</span> @(Model.TotalPlaybackTime.Hours)h @(Model.TotalPlaybackTime.Minutes)m</p>

<hr/>

@foreach(var playback in Model.Playbacks)
{
    <p>@playback.PlaybackDateTime.ToShortTimeString(): @playback.ToString()</p>
}