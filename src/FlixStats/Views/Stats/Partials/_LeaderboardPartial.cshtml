@model FlixStats.Models.InputModels.LeaderboardInputModel

<div class="row mt-3">
    <button type="button" class="btn btn-secondary" id="btn-publish-leaderboard" data-toggle="modal" data-target="#publish-leaderboard-modal">Publish to leaderboard</button>
</div>

<div class="modal fade" id="publish-leaderboard-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Leaderboard options</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="leaderboard-form">
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CountryCode"></label>
                        <select asp-for="CountryCode" class="form-control" asp-items="Model.Countries"></select>
                        <span asp-validation-for="CountryCode" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Discard</button>
                <button type="button" class="btn btn-primary" id="btn-add-leaderboard">Publish</button>
            </div>
        </div>
    </div>
</div>